= bootstrap_form_for @instrument do |f|
  = f.select :ucl_id, options_for_select(Ucl.options_for_select), label: 'Select UCL for this instrument:'
  %p
    = f.text_field :name, label: 'Instrument name:'
  %h4 Observation Section
  %ol
    = f.fields_for :observation_sections, f.object.observation_sections_ordered do |builder|
      %li
        = builder.text_area :name, rows: 3, label: 'Section name:'
        = builder.check_box :_destroy, label: 'Remove Section:'
  %p
    = f.submit "Save Instrument"
